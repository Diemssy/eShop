{% extends 'layouts/base.html.twig' %}
    
{% block title 'Connexion | eShop' %}

{% block content %}
<form method="post">
    {% if error %}
        <div class="alert alert-dismissible alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 alert alert-dismissible alert-primary">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}" title="se déconnecter de mon compte">Déconnexion</a>
        </div>
    {% endif %}
    <h1 class="text-center mt-5 text-secondary bg-light rounded p-3">Connexion</h1>
    <br>
    <label for="inputEmail"  class="form-label"></label>
    <input type="email" value="{{ last_username }}" placeholder="Email" name="email" id="inputEmail" class="form-control text-center" autocomplete="email" required autofocus>
    <label for="inputPassword"  class="form-label"></label>
    <input type="password" placeholder="Mot De Passe" name="password" id="inputPassword" class="form-control text-center" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <br>
    <button class="btn btn-block btn-success text-light" type="submit">
        Valider
    </button>
    <hr>
</form>
{% endblock %}
